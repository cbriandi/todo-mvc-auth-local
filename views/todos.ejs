<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Todo List</title>
    <link rel="stylesheet" href="css/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" integrity="sha512-Kc323vGBEqzTmouAECnVceyQqyqdsSiqLQISBL29aUW4U/M7pSPA/gEUZQqv1cwx4OnYxTxve5UMg5GT6L4JJg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body>
    <section class="bg-gray-50 min-h-screen flex items-center justify-center">
        <div class="bg-gray-100 flex rounded-2xl shadow-lg max-w-5xl p-5 items-center">
          <div class="md:w-1\ px-8 md:px-16">
            <h1 class="text-2xl text-[#002D74] text-center font-semibold mb-5">Todo List</h1>
            <h2 class="text-xl text-[#002D74] text-center mb-10"><%= user.userName %> has <%= left %> <%= left !== 1 ? 'things' : 'thing' %> left to do.</h2>
            <ul>
                <% todos.forEach( el => { %>
                        <li class='todoItem mb-10' data-id='<%=el._id%>'>
                            <span class='text-sm md:text-lg text-[#002D74] text-center mb-5 mr-1 <%= el.completed === true ? 'completed' : 'not'%>'><%= el.todo %></span>
                            <span class='text-xs md:text-base text-[#002D74] font-semibold text-center mb-5 mr-1 <%= el.completed === true ? 'completed' : 'not'%>'><%= el.created.toLocaleDateString() %></span>
                            <button class="del py-1 px-2 text-xs text-white bg-[#ca3037] border rounded-lg"><i class="fa-solid fa-trash-can"></i></button>
                        </li>
                <% }) %>    
            </ul>
            <form action="/todos/createTodo" method='POST' class="mb-16">
                <input type="text" placeholder="Add to List" name='todoItem' class="w-7/12 h-8 mr-3 md:w-8/12">
                <button type="submit" class="bg-[#002D74] rounded-xl text-white py-1 p-5">Add</button>
            </form>

            <div class="flex flex-row justify-center items-center">
                <a href="/logout"><button type="submit" class="bg-[#002D74] rounded-xl text-white py-1 p-5">Logout</button></a>
            </div>
          </div>
        </div>
    </section>

    <script src="js/main.js"></script>
</body>
</html>